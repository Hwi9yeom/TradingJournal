# ===========================================
# Local Development Configuration Template
# ===========================================
# Copy this file to application-local.properties and fill in your values
# DO NOT commit application-local.properties to git!
#
# Usage: Run with -Dspring.profiles.active=local
# ===========================================

# JWT Configuration (REQUIRED)
# Generate a secure 256-bit key: openssl rand -base64 32
jwt.secret=YOUR_SECURE_JWT_SECRET_HERE_MUST_BE_AT_LEAST_256_BITS

# Admin User Configuration (REQUIRED)
# Change these from defaults before first run!
admin.username=admin
admin.password=YOUR_SECURE_ADMIN_PASSWORD_HERE

# DART API Configuration (Optional)
# Get your API key from: https://opendart.fss.or.kr/
dart.api.key=YOUR_DART_API_KEY_HERE

# Finnhub API Configuration (Optional)
# Get your free API key from: https://finnhub.io/
finnhub.api.key=YOUR_FINNHUB_API_KEY_HERE

# Ollama LLM Configuration (Optional)
ollama.base-url=http://localhost:11434
ollama.model=llama3

# Redis Configuration (Optional)
spring.data.redis.enabled=false
spring.data.redis.host=localhost
spring.data.redis.port=6379
spring.data.redis.password=

# H2 Console (Development Only - DISABLE IN PRODUCTION)
spring.h2.console.enabled=true